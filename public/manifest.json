{
  "manifest_version": 2,
  "name": "iPARQ Automation Extension",
  "version": "0.1.0",
  "description": "Chrome extension to validate iPARQ Permits",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "iPARQ Automation Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}